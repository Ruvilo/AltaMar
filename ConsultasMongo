//Ordenar resultados de forma descendente y solo muestra el nombre y la cantidad de clicks, y limita
db.pezs.find({},{nombre:1, clicks:1, _id:0}).sort( { clicks: -1 } ).limit( 1 )

//Tres peces con mas clicks
db.pezs.find({},{nombre:1, _id:0}).sort({clicks: -1}).limit(3)


